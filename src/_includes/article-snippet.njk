<a href="{{ post.url }}">
    <div class="blog-card card">
        <div class="card-header">
            <div class="card-bg">
                <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="snippet__image">
            </div>
            <span class="badge primary-clr-bg">{{ post.data.category }}</span>
        </div>
        <div class="card-content">
            <h4 class="dark-clr underlined">{{ post.data.title }}</h4>
            <div class="blog-author">
                <img src="{{ post.data.authorImage }}" alt="{{ post.data.authorImageAlt }}">
                <p>Par {{ post.data.author }}</p>
            </div>
        </div>
    </div>
</a>

